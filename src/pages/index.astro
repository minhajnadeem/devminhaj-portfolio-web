---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import SocialProof from '../components/SocialProof.astro';
import KeyFeatures from '../components/KeyFeatures.astro';
import About from '../components/About.astro';
import LeadMagnet from '../components/LeadMagnet.astro';
import Content from '../components/Content.astro';
import Footer from '../components/Footer.astro';

// Content data extracted from content/home.md
const heroData = {
	name: 'MUHAMMAD MINHAJ NADEEM',
	headline: 'Senior Mobile Engineer | Flutter & Android Specialist | AI Hackathon Winner',
	subheadline: 'Building high-performance, scalable mobile experiences for global brands. From native Android roots to cross-platform Flutter mastery, I turn complex problems into elegant code.',
	ctaText: 'View My Work',
	ctaLink: '/portfolio'
};

const aboutContent = `I am a dedicated Senior Mobile Application Developer with a passion for building seamless digital experiences. With a foundation in Computer Science from IUB (Class of 2017) and a career that spans startups, international agencies, and high-stakes freelance projects, I've mastered the art of "Research & Development."

My friends call me the "RnD Developer" because I thrive in the face of technical challenges. Whether it's implementing ARCore Cloud Anchors, integrating complex WebRTC via DailyCo, or winning a GDG Build With AI Hackathon, I am driven by a relentless pursuit of excellence. I don't just write code; I live and breathe it.`;

const keyFeatures = [
	{
		title: 'Native Android Development (Java/Kotlin)',
		description: 'Building scalable, high-performance apps',
		icon: 'mobile'
	},
	{
		title: 'Cross-Platform App Development (Flutter)',
		description: 'Faster deployment across multiple platforms',
		icon: 'mobile'
	},
	{
		title: 'MVPs, Feature Additions & App Maintenance',
		description: 'Helping businesses launch & grow',
		icon: 'mobile'
	},
	{
		title: 'Android TV Apps',
		description: 'Developing interactive media experiences',
		icon: 'mobile'
	},
	{
		title: 'Technical Consulting',
		description: 'Expert guidance on architecture, scalability, and best practices for mobile development projects.',
		icon: 'consulting'
	}
];

const leadMagnetData = {
	title: 'Download My Resume',
	subtitle: 'Get a comprehensive overview of my experience, skills, and achievements. Perfect for potential clients and collaborators.',
	ctaText: 'Download Resume',
	ctaLink: '/files/Minhaj-Nadeem-Resume-12-2025.pdf'
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Muhammad Minhaj Nadeem - Senior Mobile Engineer | Flutter & Android Specialist | AI Hackathon Winner" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/jpeg" href="/favicon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>Muhammad Minhaj Nadeem - Senior Mobile Engineer</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				/* Color Palette */
				--color-teal: #2f9983;
				--color-navy: #1b3956;
				--color-white: #f7f0f0;
				--color-lavender: #A68FC8;
				
				/* Legacy variables for compatibility */
				--color-primary: #1b3956;
				--color-accent: #2f9983;
				--color-text: #1b3956;
				--color-text-light: #6b7280;
				--color-bg: #f7f0f0;
				--color-bg-light: #f7f0f0;
				
				/* Typography */
				--font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				
				/* Spacing */
				--spacing-xs: 0.5rem;
				--spacing-sm: 1rem;
				--spacing-md: 2rem;
				--spacing-lg: 4rem;
				--spacing-xl: 6rem;
				
				/* Border Radius */
				--radius-sm: 0.375rem;
				--radius-md: 0.5rem;
				--radius-lg: 0.75rem;
				
				/* Shadows */
				--shadow-sm: 0 1px 2px rgba(27, 57, 86, 0.05);
				--shadow-md: 0 4px 6px rgba(27, 57, 86, 0.1);
				--shadow-lg: 0 10px 25px rgba(27, 57, 86, 0.15);
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: var(--font-family);
				color: var(--color-text);
				background: var(--color-bg);
				line-height: 1.6;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}

			a {
				color: inherit;
			}

			img {
				max-width: 100%;
				height: auto;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<Hero 
				name={heroData.name}
				headline={heroData.headline}
				subheadline={heroData.subheadline}
				ctaText={heroData.ctaText}
				ctaLink={heroData.ctaLink}
			/>
			<SocialProof />
			<KeyFeatures features={keyFeatures} />
			<About content={aboutContent} />
			<LeadMagnet 
				title={leadMagnetData.title}
				subtitle={leadMagnetData.subtitle}
				ctaText={leadMagnetData.ctaText}
				ctaLink={leadMagnetData.ctaLink}
			/>
			<Content />
		</main>
		<Footer />
	</body>
</html>
