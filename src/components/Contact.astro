---
interface Props {
	heroHeading?: string;
	heroSubheadline?: string;
	email?: string;
	whatsapp?: string;
	whyWorkWithMe?: {
		title: string;
		points: string[];
	};
	socialLinks?: {
		linkedin?: string;
		github?: string;
		upwork?: string;
		stackoverflow?: string;
		instagram?: string;
	};
}

const {
	heroHeading = "Let's Build Something Exceptional",
	heroSubheadline = "Whether you have a challenging bug to solve, a new app idea, or need a technical consultant for an AI-powered project, I'm ready to help.",
	email = "your-email@example.com",
	whatsapp = "",
	whyWorkWithMe = {
		title: "Why Work With Me?",
		points: [
			"**The \"RnD\" Approach:** I don't just fix symptoms; I find the root cause and research the most future-proof solution.",
			"**Proven Reliability:** Trusted by CEOs of international companies like PimentaGroup.",
			"**Tech Versatility:** Expert in both Native Android (Kotlin) and Cross-Platform (Flutter)."
		]
	},
	socialLinks = {
		linkedin: "#",
		github: "#",
		upwork: "#",
		stackoverflow: "#",
		instagram: "#"
	}
} = Astro.props;
---

<section class="contact-hero">
	<div class="contact-hero-container">
		<h1 class="contact-hero-heading">{heroHeading}</h1>
		<p class="contact-hero-subheadline">{heroSubheadline}</p>
	</div>
</section>

<section class="contact-options">
	<div class="contact-options-container">
		<div class="contact-card">
			<div class="contact-card-icon">
				<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
					<polyline points="22,6 12,13 2,6"></polyline>
				</svg>
			</div>
			<h3 class="contact-card-title">Email Me Directly</h3>
			<p class="contact-card-content">For project inquiries or formal proposals.</p>
			<a href={`mailto:${email}`} class="contact-card-action">{email}</a>
		</div>

		{whatsapp && (
			<div class="contact-card">
				<div class="contact-card-icon">
					<svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
					</svg>
				</div>
				<h3 class="contact-card-title">WhatsApp</h3>
				<p class="contact-card-content">Quick communication for urgent inquiries or casual discussions.</p>
				<a href={`https://wa.me/${whatsapp.replace(/[^0-9]/g, '')}`} class="contact-card-action" target="_blank" rel="noopener noreferrer">{whatsapp}</a>
			</div>
		)}
	</div>
</section>

<section class="why-work-with-me">
	<div class="why-work-container">
		<h2 class="why-work-title">{whyWorkWithMe.title}</h2>
		<div class="why-work-points">
			{whyWorkWithMe.points.map((point) => (
				<div class="why-work-point" set:html={point}></div>
			))}
		</div>
	</div>
</section>

<section class="social-links">
	<div class="social-links-container">
		<h2 class="social-links-title">Social & Professional Links</h2>
		<div class="social-links-grid">
			{socialLinks.linkedin && (
				<a href={socialLinks.linkedin} class="social-link" target="_blank" rel="noopener noreferrer">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
					</svg>
					<span>LinkedIn</span>
				</a>
			)}
			{socialLinks.github && (
				<a href={socialLinks.github} class="social-link" target="_blank" rel="noopener noreferrer">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					<span>GitHub</span>
				</a>
			)}
			{socialLinks.upwork && (
				<a href={socialLinks.upwork} class="social-link" target="_blank" rel="noopener noreferrer">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M18.561 13.158c-1.102 0-2.135-.467-3.074-1.227l.228-1.076.008-.042c.207-1.143.849-3.06 2.839-3.06 1.492 0 2.703 1.212 2.703 2.703-.001 1.489-1.212 2.702-2.704 2.702zm0-8.14c-2.539 0-4.51 1.649-5.31 4.366-1.22-1.834-2.148-4.036-2.687-5.892H7.828v7.112c-.002 1.406-1.141 2.546-2.547 2.546-1.405 0-2.543-1.14-2.545-2.546V3.492H0v7.112c0 2.914 2.37 5.303 5.281 5.303 2.913 0 5.283-2.389 5.283-5.303v-1.19c.529 1.107 1.182 2.229 1.974 3.221l-1.673 7.873h2.797l1.213-5.71c1.063.679 2.285 1.109 3.686 1.109 3 0 5.439-2.452 5.439-5.45 0-3.001-2.439-5.439-5.439-5.439z"/>
					</svg>
					<span>Upwork</span>
				</a>
			)}
			{socialLinks.stackoverflow && (
				<a href={socialLinks.stackoverflow} class="social-link" target="_blank" rel="noopener noreferrer">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M15.292 19.121v-1.936h3.711v1.936h-3.711zm-.776-4.673h4.491v-1.936H14.516v1.936zm-.97-4.595h5.432V8.777H13.546v1.876zm-1.156-4.074h6.6V4.713h-6.6v1.876zM4.549 18.52l1.47-1.47 4.684 4.684-1.47 1.47-4.684-4.684zm1.47-12.608L4.549 4.432l4.684-4.684 1.47 1.47L6.019 5.912z"/>
					</svg>
					<span>Stack Overflow</span>
				</a>
			)}
			{socialLinks.instagram && (
				<a href={socialLinks.instagram} class="social-link" target="_blank" rel="noopener noreferrer">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
					</svg>
					<span>Instagram</span>
				</a>
			)}
		</div>
	</div>
</section>

<style>
	.contact-hero {
		padding: 6rem 2rem 4rem;
		background: #f7f0f0;
		text-align: center;
	}

	.contact-hero-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.contact-hero-heading {
		font-size: 3.5rem;
		font-weight: 800;
		color: #1b3956;
		margin: 0 0 1.5rem 0;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	.contact-hero-subheadline {
		font-size: 1.25rem;
		color: #1b3956;
		line-height: 1.7;
		margin: 0;
		opacity: 0.8;
	}

	.contact-options {
		padding: 6rem 2rem;
		background: #f7f0f0;
	}

	.contact-options-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2.5rem;
		justify-content: center;
	}

	.contact-card {
		background: #fff;
		padding: 2.5rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(27, 57, 86, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 25px rgba(27, 57, 86, 0.15);
	}

	.contact-card-icon {
		width: 56px;
		height: 56px;
		background: linear-gradient(135deg, #2f9983 0%, #1b3956 100%);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #f7f0f0;
		margin-bottom: 0.5rem;
	}

	.contact-card-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1b3956;
		margin: 0;
	}

	.contact-card-content {
		font-size: 1rem;
		color: #1b3956;
		line-height: 1.6;
		margin: 0;
		opacity: 0.8;
		flex-grow: 1;
	}

	.contact-card-action {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: #2f9983;
		color: #f7f0f0;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		font-size: 0.95rem;
		transition: background 0.3s ease;
		width: fit-content;
		margin-top: 0.5rem;
	}

	.contact-card-action:hover {
		background: #257a68;
	}

	.why-work-with-me {
		padding: 6rem 2rem;
		background: #1b3956;
		color: #f7f0f0;
	}

	.why-work-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.why-work-title {
		font-size: 2.75rem;
		font-weight: 800;
		color: #f7f0f0;
		margin: 0 0 3rem 0;
		text-align: center;
		letter-spacing: -0.02em;
	}

	.why-work-points {
		display: grid;
		gap: 2rem;
	}

	.why-work-point {
		background: rgba(247, 240, 240, 0.1);
		padding: 2rem;
		border-radius: 12px;
		font-size: 1.125rem;
		line-height: 1.8;
		color: #f7f0f0;
	}

	.why-work-point :global(strong) {
		color: #2f9983;
		font-weight: 600;
	}

	.social-links {
		padding: 6rem 2rem;
		background: #f7f0f0;
	}

	.social-links-container {
		max-width: 1200px;
		margin: 0 auto;
		text-align: center;
	}

	.social-links-title {
		font-size: 2.75rem;
		font-weight: 800;
		color: #1b3956;
		margin: 0 0 3rem 0;
		letter-spacing: -0.02em;
	}

	.social-links-grid {
		display: flex;
		justify-content: center;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem 2rem;
		background: #fff;
		color: #1b3956;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		box-shadow: 0 2px 4px rgba(27, 57, 86, 0.1);
	}

	.social-link:hover {
		background: #2f9983;
		color: #f7f0f0;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(47, 153, 131, 0.3);
	}

	@media (max-width: 968px) {
		.contact-hero-heading {
			font-size: 2.5rem;
		}

		.contact-options-container {
			grid-template-columns: 1fr;
		}

		.why-work-title,
		.social-links-title {
			font-size: 2.25rem;
		}
	}

	@media (max-width: 640px) {
		.contact-hero {
			padding: 4rem 1rem 3rem;
		}

		.contact-hero-heading {
			font-size: 2rem;
		}

		.contact-hero-subheadline {
			font-size: 1.125rem;
		}

		.contact-options {
			padding: 4rem 1rem;
		}

		.contact-card {
			padding: 2rem;
		}

		.why-work-with-me {
			padding: 4rem 1rem;
		}

		.why-work-point {
			padding: 1.5rem;
			font-size: 1rem;
		}

		.social-links {
			padding: 4rem 1rem;
		}

		.social-links-grid {
			flex-direction: column;
			align-items: stretch;
		}

		.social-link {
			justify-content: center;
		}
	}
</style>

