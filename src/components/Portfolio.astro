---
interface App {
	name: string;
	url: string;
}

interface Props {
	heroHeading?: string;
	heroSubheadline?: string;
	apps?: App[];
}

const {
	heroHeading = "My Portfolio",
	heroSubheadline = "A collection of mobile applications I've built, ranging from fitness and sports to productivity and entertainment.",
	apps = []
} = Astro.props;
---

<section class="portfolio-hero">
	<div class="portfolio-hero-container">
		<h1 class="portfolio-hero-heading">{heroHeading}</h1>
		<p class="portfolio-hero-subheadline">{heroSubheadline}</p>
	</div>
</section>

<section class="portfolio-apps">
	<div class="portfolio-apps-container">
		<div class="portfolio-grid">
			{apps.map((app) => (
				<a href={app.url} class="portfolio-card" target="_blank" rel="noopener noreferrer">
					<div class="portfolio-card-icon">
						<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
							<line x1="12" y1="18" x2="12.01" y2="18"></line>
						</svg>
					</div>
					<h3 class="portfolio-card-title">{app.name}</h3>
					<p class="portfolio-card-subtitle">Available on Google Play</p>
					<div class="portfolio-card-action">
						<span>View on Play Store</span>
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<line x1="5" y1="12" x2="19" y2="12"></line>
							<polyline points="12 5 19 12 12 19"></polyline>
						</svg>
					</div>
				</a>
			))}
		</div>
	</div>
</section>

<style>
	.portfolio-hero {
		padding: 6rem 2rem 4rem;
		background: #f7f0f0;
		text-align: center;
	}

	.portfolio-hero-container {
		max-width: 800px;
		margin: 0 auto;
	}

	.portfolio-hero-heading {
		font-size: 3.5rem;
		font-weight: 800;
		color: #1b3956;
		margin: 0 0 1.5rem 0;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	.portfolio-hero-subheadline {
		font-size: 1.25rem;
		color: #1b3956;
		line-height: 1.7;
		margin: 0;
		opacity: 0.8;
	}

	.portfolio-apps {
		padding: 6rem 2rem;
		background: #f7f0f0;
	}

	.portfolio-apps-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2.5rem;
	}

	.portfolio-card {
		background: #fff;
		padding: 2.5rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(27, 57, 86, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		text-decoration: none;
		color: inherit;
	}

	.portfolio-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 25px rgba(27, 57, 86, 0.15);
	}

	.portfolio-card-icon {
		width: 56px;
		height: 56px;
		background: linear-gradient(135deg, #2f9983 0%, #1b3956 100%);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #f7f0f0;
		margin-bottom: 0.5rem;
	}

	.portfolio-card-title {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1b3956;
		margin: 0;
	}

	.portfolio-card-subtitle {
		font-size: 0.95rem;
		color: #1b3956;
		line-height: 1.6;
		margin: 0;
		opacity: 0.7;
	}

	.portfolio-card-action {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-top: 1rem;
		padding-top: 1rem;
		border-top: 1px solid rgba(27, 57, 86, 0.1);
		color: #2f9983;
		font-weight: 600;
		font-size: 0.95rem;
		transition: color 0.3s ease;
	}

	.portfolio-card:hover .portfolio-card-action {
		color: #257a68;
	}

	@media (max-width: 968px) {
		.portfolio-hero-heading {
			font-size: 2.5rem;
		}

		.portfolio-grid {
			grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
			gap: 2rem;
		}
	}

	@media (max-width: 640px) {
		.portfolio-hero {
			padding: 4rem 1rem 3rem;
		}

		.portfolio-hero-heading {
			font-size: 2rem;
		}

		.portfolio-hero-subheadline {
			font-size: 1.125rem;
		}

		.portfolio-apps {
			padding: 4rem 1rem;
		}

		.portfolio-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.portfolio-card {
			padding: 2rem;
		}
	}
</style>

