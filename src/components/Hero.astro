---
interface Props {
	name: string;
	headline: string;
	subheadline: string;
	ctaText?: string;
	ctaLink?: string;
}

const { name, headline, subheadline, ctaText = "View My Work", ctaLink = "#projects" } = Astro.props;
---

<section class="hero" id="home">
	<div class="hero-container">
		<div class="hero-image">
			<div class="hero-image-wrapper">
				<div class="hero-image-placeholder">
					<img src="/assets/profile_img.jpg" alt="Profile picture" class="profile-image" />
				</div>
			</div>
		</div>
		<div class="hero-content">
			<h1 class="hero-headline">{headline}</h1>
			<p class="hero-subheadline">{subheadline}</p>
			<a href={ctaLink} class="cta-button">{ctaText} â†’</a>
		</div>
	</div>
</section>

<style>
	.hero {
		padding: 5rem 2rem;
		background: #f7f0f0;
		min-height: 85vh;
		display: flex;
		align-items: center;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1.2fr;
		gap: 5rem;
		align-items: center;
	}

	.hero-image {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.hero-image-wrapper {
		position: relative;
		width: 100%;
		max-width: 450px;
		aspect-ratio: 1;
	}

	.hero-image-placeholder {
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #2f9983 0%, #1b3956 100%);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
		border: 8px solid #f7f0f0;
		box-shadow: 0 10px 40px rgba(27, 57, 86, 0.2);
	}

	.profile-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.hero-headline {
		font-size: 3.5rem;
		font-weight: 800;
		color: #1b3956;
		line-height: 1.1;
		margin: 0;
		letter-spacing: -0.02em;
	}

	.hero-subheadline {
		font-size: 1.25rem;
		color: #1b3956;
		line-height: 1.7;
		margin: 0;
		max-width: 600px;
		opacity: 0.8;
	}

	.cta-button {
		display: inline-block;
		padding: 1rem 2.5rem;
		background: #2f9983;
		color: #f7f0f0;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		font-size: 1.125rem;
		transition: all 0.3s ease;
		width: fit-content;
		box-shadow: 0 4px 14px rgba(47, 153, 131, 0.3);
		margin-top: 0.5rem;
	}

	.cta-button:hover {
		background: #257a68;
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(47, 153, 131, 0.4);
	}

	@media (max-width: 968px) {
		.hero-container {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.hero-image {
			order: -1;
		}

		.hero-headline {
			font-size: 2.5rem;
		}

		.hero-subheadline {
			font-size: 1.125rem;
		}
	}

	@media (max-width: 640px) {
		.hero {
			padding: 3rem 1rem;
			min-height: auto;
		}

		.hero-headline {
			font-size: 2rem;
		}

		.cta-button {
			width: 100%;
			text-align: center;
		}
	}
</style>
